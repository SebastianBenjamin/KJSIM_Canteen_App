<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base theme with Material 3 -->
    <style name="Theme.Dial2" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:fitsSystemWindows">true</item>
        <!-- Prevent icon tinting -->
        <item name="navigationViewStyle">@style/Widget.MenuPage.NavigationView</item>
    </style>

    <!-- Custom NavigationView Style -->
    <style name="Widget.MenuPage.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="itemIconTint">@null</item>
    </style>

</resources>
